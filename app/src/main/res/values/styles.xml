<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/DodgerBlue</item>
        <item name="colorPrimaryDark">@color/iconColor</item>
        <item name="colorAccent">@color/Crimson</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">monospace</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogAnimation" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowEnterAnimation">@android:anim/slide_out_right</item>
        <item name="android:windowExitAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowBackground">@drawable/oval_dilaog</item>
        <item name="android:typeface">monospace</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="levelUpDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowEnterAnimation">@android:anim/slide_out_right</item>
        <item name="android:windowExitAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowBackground">@drawable/level_up</item>
        <item name="android:typeface">monospace</item>
        <item name="android:windowIsFloating">true</item>
    </style>


    <style name="cannotComplete" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowEnterAnimation">@android:anim/slide_out_right</item>
        <item name="android:windowExitAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowBackground">@drawable/cannot</item>
        <item name="android:typeface">monospace</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>
